{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask (backend)",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "backend.app:create_app()",
          "FLASK_DEBUG": "1"
        },
        "args": [
          "run",
          "--host=0.0.0.0",
          "--port=5000",
          "--no-reload"
        ],
        "cwd": "${workspaceFolder}",
        "justMyCode": false
      },
      {
        "name": "Python: backend.app 直接运行",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/backend/app.py",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "justMyCode": false
      }
    ]
  }